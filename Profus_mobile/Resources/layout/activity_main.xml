<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linearLayout1">
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2">
        <TextView
            android:text="Nombre de joueurs ?: "
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="190.8dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView1"
            android:layout_marginRight="0.0dp" />
        <Spinner
            android:spinnerMode ="dialog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/spinner" />
    </LinearLayout>
    <Button
        android:text="Jouer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Bouton_Jouer" />
    <Button
        android:text="Info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Bouton_Info" />
    <Button
        android:text="paramÃ¨tres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Bouton_Parametre" />
    <Button
        android:text="Inscription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Bouton_Inscription" />
    <Button
        android:text="Scores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Bouton_Score" />
</LinearLayout>